@{
}
    <form method="post" action="/events/Edit">
        <div class="form-group">
            <label for="name">Name of event</label>
            <input type="text" name="name" value="@ViewBag.eventToEdit.Name" />
        </div>

        <div class="form-group">
            <label for="Description ">Event Description</label>
            <input type="text" name="description" value="@ViewBag.eventToEdit.Description" />
        </div>

        <div class="form-group">
            <label for="Location ">Location</label>
            <input type="text" name="Location" value="@ViewBag.eventToEdit.Location" />
        </div>

        <div class="form-group">
            <label for="Attending ">Attending</label>
            <input type="text" name="Attending" value="@ViewBag.eventToEdit.Attending" />
        </div>

        <div class="form-group">
            <label for="Description ">Contact Email</label>
            <input type="text" name="ContactEmail" value="@ViewBag.eventToEdit.ContactEmail" />
        </div>

        <input type="submit" value="Edit Selected" />
        <input type="hidden" value="@ViewBag.eventToEdit.Id" name="eventId" />
    </form>